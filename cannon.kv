<MainMenuScreen>:
    canvas:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'assets/titlescreen.png'

    Button:
        text: ''
        background_normal: 'assets/button_play_w.png'
        background_down: 'assets/button_play_b.png'
        size_hint: 0.3, 0.18
        pos_hint: {'center_x': 0.5, 'center_y': 0.65}
        on_release: app.switch_to_gamemenu()

    Button:
        text: ''
        background_normal: 'assets/button_hof_w.png'
        background_down: 'assets/button_hof_b.png'
        size_hint: 0.3, 0.18
        pos_hint: {'center_x': 0.5, 'center_y': 0.45}
        on_release: app.switch_to_hof()

    Button:
        text: ''
        background_normal: 'assets/button_help_w.png'
        background_down: 'assets/button_help_b.png'
        size_hint: 0.3, 0.18
        pos_hint: {'center_x': 0.5, 'center_y': 0.25}
        on_release: app.switch_to_help()

<HallOfFameScreen>:
    FloatLayout:
        canvas:
            Rectangle:
                pos: self.pos
                size: self.size
                source: 'assets/hof_background.png'
        Label:
            text: root.primo
            valign: 'middle'
            halign: 'center'
            color: 1, 1, 1, 1
            size_hint: 1, 0.25
            font_size: 0.7 * self.height - dp(25)
            pos_hint: {'center_x': 0.5, 'center_y': 0.75}
            font_name: 'assets/SuperMario256.ttf'
        Label:
            text: root.secondo
            valign: 'middle'
            halign: 'center'
            color: 1, 1, 1, 1
            size_hint: 1, 0.15
            font_size: self.height - dp(15)
            pos_hint: {'center_x': 0.5, 'center_y': 0.50}
            font_name: 'assets/SuperMario256.ttf'
        Label:
            text: root.terzo
            valign: 'middle'
            halign: 'center'
            color: 1, 1, 1, 1
            size_hint: 1, 0.125
            font_size: self.height - dp(15)
            pos_hint: {'center_x': 0.5, 'center_y': 0.25}
            font_name: 'assets/SuperMario256.ttf'
        Button:
            text: "X"
            size_hint: 0.05, 0.1
            font_size: self.width - dp(25)
            pos_hint: {'center_x': 0.95, 'center_y': 0.95}
            color: 0, 0, 0, 1
            font_name: 'assets/SuperMario256.ttf'
            background_normal: 'assets/X_bg_up.png'
            background_down: 'assets/X_bg_down.png'
            on_release: app.switch_to_menu()

<HelpScreen>:
    FloatLayout:
        canvas:
            Rectangle:
                pos: self.pos
